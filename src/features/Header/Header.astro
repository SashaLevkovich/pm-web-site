---
import Logo from 'components/Logo/Logo.astro'

import phoneIcon from 'assets/icons/phone.svg'
import { PHONE_NUMBER } from 'shared/constants'
---

<header
  class="bg-brand flex items-center justify-between p-4 sticky top-0 z-10"
>
  <Logo />

  <a
    href=`tel:${PHONE_NUMBER}`
    class="bg-light rounded-full p-2 h-[42px] w-[42px] flex items-center justify-center"
  >
    <img src={phoneIcon.src} alt="Позвонить :)" />
  </a>
</header>
